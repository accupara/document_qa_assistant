# Document processing
DOCS_DIR=/subapps/dqa/documents
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Vector store
CHROMA_DB_PATH=/subapps/dqa/chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_CACHE_PATH=/subapps/dqa/.cache/huggingface
COLLECTION_NAME=document_qa

# Search
TOP_K=5
CONFIDENCE_THRESHOLD=0.7

# LLM
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_MODEL=llama3.2:1b
OPENAI_API_KEY=ollama

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/document_qa.log